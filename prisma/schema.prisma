generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model movie {
  id               String   @id @default(uuid())
  title            String
  year             Int
  cast             String[]
  genres           String[]
  extract          String
  thumbnail        String
  thumbnail_width  Int?
  thumbnail_height Int?
}
